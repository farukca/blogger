<article class="article" id="article_<%= article.id %>">
  <header class="article_header" id="article_<%= article.id %>">
    <h1>
      <%= link_to article.title, article_path(article) %>
    </h1>
    <h3>
      <%= link_to article.author, main_app.user_path(article.author) %>
      <em>wrote this on</em>
      <span class="article-date"><%= article.publish_date %></span>
      <span class="article-comment-count"><%= "#{article.blog_comments_count} Comments" %></span>
      <% if current_user = article.author %>
        <small><%= link_to "Edit Article", edit_article_path(article) %></small>
      <% end %>
    </h3>
  </header>
  <div class="article-content">
    <p><%= sanitize article.content %></p>
  </div>
</article>